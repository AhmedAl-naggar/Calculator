<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ahmedal_naggarpc.calculator.MainActivity"
    android:orientation="vertical"
    android:weightSum="3"
    android:gravity="center">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/edit_text"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="4"
        android:background="@color/backeground"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:weightSum="5"
            android:layout_marginRight="3dp">
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/op_btn_bg"
                android:text="C"
                android:textColor="#009fcd"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:id="@+id/btn_cancel"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/num_btn_bg"
                android:textColor="#32626b"
                android:text="7"
                android:textSize="20dp"
                android:id="@+id/btn_num7"
                android:layout_marginBottom="3dp"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/num_btn_bg"
                android:textColor="#32626b"
                android:textSize="20dp"
                android:text="4"
                android:id="@+id/btn_num4"
                android:layout_marginBottom="3dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/num_btn_bg"
                android:textColor="#32626b"
                android:textSize="20dp"
                android:text="1"
                android:id="@+id/btn_num1"
                android:layout_marginBottom="3dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/num_btn_bg"
                android:textColor="#32626b"
                android:textSize="20dp"
                android:text="0"
                android:id="@+id/btn_num0"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginRight="3dp">
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/op_btn_bg"
                android:text="รท"
                android:textColor="#009fcd"
                android:textStyle="bold"
                android:textSize="25sp"
                android:id="@+id/btn_div"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/num_btn_bg"
                android:textColor="#32626b"
                android:textSize="20dp"
                android:text="8"
                android:id="@+id/btn_num8"
                android:layout_marginBottom="3dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/num_btn_bg"
                android:textColor="#32626b"
                android:textSize="20dp"
                android:text="5"
                android:id="@+id/btn_num5"
                android:layout_marginBottom="3dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/num_btn_bg"
                android:textColor="#32626b"
                android:textSize="20dp"
                android:text="2"
                android:id="@+id/btn_num2"
                android:layout_marginBottom="3dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/num_btn_bg"
                android:textColor="#32626b"
                android:textSize="20dp"
                android:text="."
                android:id="@+id/btn_dot"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginRight="3dp">
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/op_btn_bg"
                android:text="ร"
                android:textColor="#009fcd"
                android:textStyle="bold"
                android:textSize="25sp"
                android:id="@+id/btn_multi"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/num_btn_bg"
                android:textColor="#32626b"
                android:textSize="20dp"
                android:text="9"
                android:id="@+id/btn_num9"
                android:layout_marginBottom="3dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/num_btn_bg"
                android:textColor="#32626b"
                android:textSize="20dp"
                android:text="6"
                android:id="@+id/btn_num6"
                android:layout_marginBottom="3dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/num_btn_bg"
                android:textColor="#32626b"
                android:textSize="20dp"
                android:text="3"
                android:id="@+id/btn_num3"
                android:layout_marginBottom="3dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/num_btn_bg"
                android:textColor="#32626b"
                android:textSize="20dp"
                android:text="+/-"
                android:id="@+id/btn_pos_neg"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/ic_backspace_black_24dp"
                android:background="@drawable/op_btn_bg"
                android:id="@+id/btn_backSpace"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/op_btn_bg"
                android:text="-"
                android:textColor="#009fcd"
                android:textStyle="bold"
                android:textSize="25sp"
                android:id="@+id/btn_min"
                android:layout_marginBottom="3dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/op_btn_bg"
                android:text="+"
                android:textColor="#009fcd"
                android:textStyle="bold"
                android:textSize="25sp"
                android:id="@+id/btn_plus"
                android:layout_marginBottom="3dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/op_btn_bg"
                android:text="( )"
                android:textColor="#009fcd"
                android:textStyle="bold"
                android:textSize="25sp"
                android:id="@+id/btn_brackets"
                android:layout_marginBottom="3dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/op_btn_bg"
                android:text="="
                android:textColor="#53c002"
                android:textStyle="bold"
                android:textSize="25sp"
                android:id="@+id/btn_equal"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
